@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-striped table-hover" style="margin-top:20px">
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Satisid</td>
            <td>@k.Urun.UrunAd</td>
            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
            <td>@k.Adet</td>
            <td>@k.Fiyat</td>
            <td>@k.ToplamTutar</td>
            <td>@k.Tarih</td>
            <td><a href="/Satis/SatisGetir/@k.Satisid" class="btn btn-outline-warning"><i class="fa fa-undo"></i>Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@k.Satisid" class="btn btn-outline-primary"><i class="fa fa-align-center"></i>Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-outline-primary">Yeni Satış Yap</a>

