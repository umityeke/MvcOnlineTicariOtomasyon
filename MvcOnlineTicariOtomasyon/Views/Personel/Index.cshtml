@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-striped" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyadı</th>
        <th>Departman</th>
        @*<th>Görsel</th>*@
        <th>Güncelle</th>
        <th>Satış Detayları</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personelid</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>@k.Departman.DepartmanAd</td>
            @*<td><img src="@k.PersonelGorsel" style="width:50px; height:50px" /></td>*@


            <td><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-outline-warning"><i class="fa fa-undo"></i>Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-outline-primary" s><i class="fa fa-align-center"></i>Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-outline-primary">Personel Ekle</a>