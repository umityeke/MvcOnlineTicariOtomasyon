@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-striped">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.Cariid" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.Cariid" class="btn btn-outline-warning"><i class="fa fa-undo"></i>Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@x.Cariid" class="btn btn-outline-dark"><i class="fa fa-align-center"></i>Satış Geçmişi</a></td>
        </tr>
    }
</table>
<a href="/Cari/YeniCari" class="btn btn-info">Yeni Cari Ekle</a>

